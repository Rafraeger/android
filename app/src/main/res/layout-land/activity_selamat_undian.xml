<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:background="@drawable/bg_undianvg"
    tools:context=".selamat_undian">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="355dp"
        android:layout_height="80dp"
        android:layout_marginLeft="196dp"
        android:layout_marginEnd="188dp"
        android:onClick="wheel1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="0.0">
        <View
            android:id="@+id/rectangle_5"
            android:layout_width="362dp"
            android:layout_height="80dp"
            android:background="@drawable/rectangle_5" />

        <TextView
            android:id="@+id/diskon70"
            android:layout_width="391dp"
            android:layout_height="124dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_extrabold"
            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="24sp"
            android:text="@string/diskon70h"
            android:textAppearance="@style/diskon70h" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="355dp"
        android:layout_height="74dp"
        android:layout_marginTop="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/selamat_and"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_horizontal|center_vertical"
            android:lineHeight="28sp"
            android:text="@string/selamat_anda"
            android:textAppearance="@style/selamat_anda"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="550dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>